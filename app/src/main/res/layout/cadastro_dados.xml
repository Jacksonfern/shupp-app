<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background">

    <GridLayout
        android:id="@+id/grid_form_cadastro_dados"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:columnCount="2">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginEnd="12dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/avatar"/>

        <EditText
            android:id="@+id/edit_text_usuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="20dp"
            android:layout_marginEnd="40dp"
            android:maxLength="50"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:background="@drawable/shape_input"
            android:backgroundTint="@color/hint_text_color"
            android:hint="@string/edit_text_usuario"
            android:textColorHint="@color/hint_text_color"
            android:textColor="@color/whiteColor" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/envelope"/>

        <EditText
            android:id="@+id/edit_text_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="40dp"
            android:drawableTint="@color/colorContent"
            android:hint="@string/edit_text_email"
            android:inputType="textEmailAddress"
            android:maxLength="50"
            android:singleLine="true"
            android:background="@drawable/shape_input"
            android:backgroundTint="@color/hint_text_color"
            android:textColor="@color/whiteColor"
            android:textColorHint="@color/hint_text_color" />

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/key"/>

        <EditText
            android:id="@+id/edit_text_senha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="40dp"
            android:hint="@string/edit_text_senha"
            android:inputType="textPassword"
            android:maxLength="20"
            android:background="@drawable/shape_input"
            android:backgroundTint="@color/hint_text_color"
            android:singleLine="true"
            android:textColor="@color/whiteColor"
            android:textColorHint="@color/hint_text_color" />

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/colorPrimary"
            android:layout_gravity="center_vertical"
            android:src="@drawable/telephone"/>

        <EditText
            android:id="@+id/edit_text_telefone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="40dp"
            android:hint="@string/edit_text_telefone"
            android:inputType="phone"
            android:maxLength="20"
            android:singleLine="true"
            android:textColor="@color/whiteColor"
            android:background="@drawable/shape_input"
            android:backgroundTint="@color/hint_text_color"
            android:textColorHint="@color/hint_text_color" />
    </GridLayout>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/grid_form_cadastro_dados"
        app:layout_constraintStart_toStartOf="@id/grid_form_cadastro_dados"
        android:layout_marginTop="12dp"
        android:text="@string/check_artista"
        android:textColor="@color/whiteColor"
        android:padding="12dp"
        android:buttonTint="@color/whiteColor"/>
</android.support.constraint.ConstraintLayout>